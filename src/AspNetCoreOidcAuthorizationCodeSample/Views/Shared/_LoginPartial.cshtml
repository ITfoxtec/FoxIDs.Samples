@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "nav navbar-form navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="navbar-text">
                Hello, @User.Identity.Name!
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="small">
            @Html.ActionLink("SAML IdP Sample Log in", "Login", "Auth", routeValues: new { loginType = LoginType.SamlIdPSample }, htmlAttributes: new { id = "loginLink" })
            @Html.ActionLink("SAML AD FS Log in", "Login", "Auth", routeValues: new { loginType = LoginType.SamlAdfs }, htmlAttributes: new { id = "loginLink" })
            @Html.ActionLink("SAML NemLog-in Log in", "Login", "Auth", routeValues: new { loginType = LoginType.SamlNemLogin }, htmlAttributes: new { id = "loginLink" })
        </li>
        <li class="small">
            @Html.ActionLink("OIDC parallel FoxIDs Log in", "Login", "Auth", routeValues: new { loginType = LoginType.ParallelFoxIDs }, htmlAttributes: new { id = "loginLink" })
            @Html.ActionLink("OIDC IdentityServer Log in", "Login", "Auth", routeValues: new { loginType = LoginType.IdentityServer }, htmlAttributes: new { id = "loginLink" })
            @Html.ActionLink("OIDC Azure AD Log in", "Login", "Auth", routeValues: new { loginType = LoginType.AzureAd }, htmlAttributes: new { id = "loginLink" })
        </li>
        <li>@Html.ActionLink("FoxIDs Log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}